{
  "extends": "./tsconfig.json",

  "compilerOptions": {
    "outDir": "dist",
    "rootDir": ".",

    "moduleResolution": "node",
    "module": "ESNext",
    "target": "ES2022",

    "esModuleInterop": true,
    "resolveJsonModule": true,

    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,

    "noEmit": false,

    "allowImportingTsExtensions": true
  },

  "include": [
    "server/**/*.ts",
    "server/**/*.tsx",
    "server/types/**/*.d.ts",
    "vite.config.ts"
  ],

  "exclude": [
    "node_modules",
    "dist",
    "client",
    "frontend",
    "public"
  ]
}
