{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": ".",
    "moduleResolution": "node",
    "module": "ESNext",
    "target": "ES2022",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "allowImportingTsExtensions": true
  },
    "include": [
      "server/**/*",
      "vite.config.ts",
      "server/**/*.ts",
      "server/**/*.tsx",
      "server/types/**/*.d.ts"
      
  ],
  "exclude": [
    "node_modules",
    "dist",
    "client",
    "frontend",
    "public"
  ]
}


