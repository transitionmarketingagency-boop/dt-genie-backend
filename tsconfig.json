{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "allowImportingTsExtensions": true,
    "baseUrl": ".",
    "types": ["node"],
    "paths": {
      "@/*": ["./client/src/*"],
      "@shared/*": ["./shared/*"]
    }
  },
  "ts-node": {
    "esm": true,
    "experimentalEsm": true,
    "transpileOnly": true,
    "compilerOptions": {
      "noEmit": false,
      "module": "ESNext"
    }
  },
  "include": ["server/**/*.ts", "vite.config.ts"]
}
